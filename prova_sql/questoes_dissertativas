1) 	SELECT A1.NOME, A1.IDADE
	FROM ALUNOS A1
	INNER JOIN NOTAS N1 ON (A1.ID = N1.ALUNO_ID)
	WHERE N1.NOTA > 8.0

2) 	SELECT A1.NOME, AVG(N1.NOTA) 
	FROM ALUNOS A1
	INNER JOIN NOTAS N1 ON (A1.ID = N1.ALUNO_ID
	GROUP BY A1.NOME

3) 	SELECT A1.NOME
	FROM ALUNOS A1
	WHERE NOT EXISTS(
		SELECT *
		FROM NOTAS N1
		WHERE N1.ALUNO_ID = A1.ID)
	

		
4)	SELECT A1.NOME
	FROM ALUNOS A1
	WHERE EXISTS (
    		SELECT 
    		FROM NOTAS N1
    		WHERE N1.ALUNO_ID = A1.ID
    		AND UPPER(N1.DISCIPLINA) LIKE UPPER('Matemática%')) AND 
		EXISTS (SELECT 
    		FROM NOTAS N1
    		WHERE N1.ALUNO_ID = A1.ID
    		AND UPPER(N1.DISCIPLINA) LIKE UPPER('Física%')) AND 
		EXISTS (SELECT 
    		FROM NOTAS N1
  	  	WHERE N1.ALUNO_ID = A1.ID
    		AND UPPER(N1.DISCIPLINA) LIKE UPPER('Química%')) 		


5) 	SELECT N1.DISCIPLINA, AVG(N1.NOTA) 
	FROM NOTAS N1
	GROUP BY N1.DISCIPLINA
	ORDER BY N1.DISCIPLINA	
	
	
6)	SELECT C1.NOME
	FROM CLIENTES C1
	LEFT JOIN PEDIDOS P1 ON (C1.ID = P1.CLIENTE_ID 
				AND P1.DATA_PEDIDO BETWEEN '2022-03-01' AND '2022-03-31')
	ORDER BY C1.NOME	
	
	
7)	SELECT L1.TITULO, L1.AUTOR, L1.ESTOQUE
	FROM LIVROS L1
	WHERE L1.ESTOQUE <= 10	
	
	
8) 	SELECT C1.NOME
	FROM CLIENTES C1
	INNER JOIN PEDIDOS P1 ON (C1.ID = P1.CLIENTE_ID)
	WHERE P1.QUANTIDADE = (
    		SELECT MAX(QUANTIDADE)
	    	FROM PEDIDOS)	
	    	
	    	
9)	SELECT L1.TITULO, L1.AUTOR
	FROM LIVROS L1
	INNER JOIN PEDIDOS P1 ON(L1.ID = P1.LIVRO_ID)
	WHERE P1.DATA_PEDIDO BETWEEN '2022-03-01' AND '2022-03-31' AND
	L1.PRECO * P1.QUANTIDADE > 50.00	
	
	
10)	SELECT C1.NOME, SUM(P1.QUANTIDADE * L1.PRECO)
	FROM CLIENTES C1
	INNER JOIN PEDIDOS P1 ON(C1.ID = P1.CLIENTE_ID)
	INNER JOIN LIVROS L1 ON(P1.LIVRO_ID = L1.ID)
	WHERE P1.DATA_PEDIDO BETWEEN '2022-01-01' AND '2022-02-28' 
	GROUP BY C1.NOME	
	
	
11) 	SELECT L1.TITULO
	FROM LIVROS L1
	WHERE NOT EXISTS(
		SELECT *
		FROM PEDIDOS P1
		WHERE L1.ID = P1.LIVRO_ID)    
		
		
12)	SELECT C1.NOME
	FROM CLIENTES C1
	INNER JOIN PEDIDOS P1 ON(C1.ID = P1.CLIENTE_ID) 
	INNER JOIN LIVROS L1 ON(P1.LIVRO_ID = l1.id)
	WHERE L1.AUTOR = 'Autor 3'			
	
	
13-A)	SELECT C1.NOME, SUM(P1.QUANTIDADE) TOTAL
	FROM CLIENTES C1
	INNER JOIN PEDIDOS P1 ON(C1.ID = P1.CLIENTE_ID)
	GROUP BY C1.NOME
	ORDER BY TOTAL DESC
	LIMIT 1	
	
	
OBS.: A QUESTÃO 13 PEDE QUE MOSTRE O CLIENTE QUE MAIS COMPROU NA LOJA E QUANTOS LIVROS ADQUIRIU,
SEM ESPECIFICAR SE A CONSULTA SE REFERE A QUANTIDADE DE LIVROS COMPRADOS OU O VALOR TOTAL EM LIVROS COMPRADOS. ENTÃO RESOLIVI APRESENTAR AS DUAS SOLUÇÕES
SEGUE A SEGUNDA SOLUÇÃO:

13-B)	SELECT C1.NOME, SUM(P1.QUANTIDADE * L1.PRECO) VALOR_TOTAL
	FROM CLIENTES C1
	INNER JOIN PEDIDOS P1 ON(C1.ID = P1.CLIENTE_ID)
	INNER JOIN LIVROS L1 ON(P1.LIVRO_ID = L1.ID)
	GROUP BY C1.NOME
	ORDER BY VALOR_TOTAL DESC
	LIMIT 1
	

